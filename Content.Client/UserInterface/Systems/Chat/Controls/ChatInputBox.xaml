<PanelContainer
    xmlns="https://spacestation14.io"
    xmlns:chat="clr-namespace:Content.Client.UserInterface.Systems.Chat.Controls"
    StyleClasses="StyleNano.StyleClassChatSubPanel">
    <BoxContainer
        Orientation="Horizontal"
        SeparationOverride="4">
        <chat:ChannelSelectorButton
            Access="Public"
            Name="ChannelSelector"
            ToggleMode="True"
            StyleClasses="chatSelectorOptionButton"
            MinWidth="75"/>
        <HistoryLineEdit
            Access="Public"
            Name="Input"
            HorizontalExpand="True"
            StyleClasses="chatLineEdit"/>
        <chat:ChannelFilterButton
            Access="Public"
            Name="FilterButton"
            StyleClasses="chatFilterOptionButton"/>
    </BoxContainer>
</PanelContainer>
